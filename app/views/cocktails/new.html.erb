<section>
  <div class="section page-header my-page">
    <div class="container">

      <div class="row">
        <div class="card">

          <div class="card-body">
            <%= form_for(@cocktail, url: cocktails_path) do |f| %>
              <% if @cocktail.errors.any? %>
                <div id="error_explanation">
                  <h2><%= @cocktail.errors.count %>件のエラーが発生しました。</h2>
                  <ul>
                  <% @cocktail.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
              <br>
              <div class="row">
                <div class="col-md-2 offset-md-4">
                  <div class="form-group has-icon">
                    <label class="control-label sr-only">Cocktail name</label>
                    <%= f.text_field :cocktail_name, class:"form-control", placeholder:"cocktail name" %>
                  </div>
                </div>
                <div class="col-md-2 offset-md-4">
                </div>
              </div>
              <div class="row">
                <div class="col-md-2 offset-md-4">
                  <%= f.text_area :cocktail_material, class:"form-control", placeholder:"materials" %>
                </div>
              </div>

              <div class="row">
                <div class="col-md-2 offset-md-4">
                  <%= f.attachment_field :image %>
                </div>
              </div>

              <div class="col-md-2 offset-md-4">
                <div class="title"><h3>Alcohol degree</h3></div>
                <div class="form-check">
                  <label class="form-check-label">
                    <input class="form-check-input" type="radio" value="option1">strong
                    <span class="circle"><span class="check"></span></span>
                  </label>
                </div>

                <div class="form-check">
                  <label class="form-check-label">
                    <input class="form-check-input" type="radio" value="option2">normal
                    <span class="circle"><span class="check"></span></span>
                  </label>
                </div>

                <div class="form-check">
                  <label class="form-check-label">
                    <input class="form-check-input" type="radio" value="option3">weak
                    <span class="circle"><span class="check"></span></span>
                  </label>
                </div>

              </div>

              <hr>
              <%= f.submit "登録", class:"btn btn-md btn-block" %>
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>
